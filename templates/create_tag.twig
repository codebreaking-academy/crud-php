{% extends "base.twig" %}


{% block title %}Ajouter un tag
{% endblock %}


{% block main %}
	<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
		<h1 class="h2">Ajouter un tag</h1>
		<div class="btn-toolbar mb-2 mb-md-0">
			<a class="btn btn-sm btn-outline-secondary" href="read_tag.php">
				<i class="bi bi-arrow-left"></i>
				Retour Ã  la liste des tags</a>
		</div>
	</div>
	{% if msg %}
		<div class="alert alert-success" role="alert">{{ msg }}</div>
	{% else %}
		<form action="create_tag.php" method="post">
			<div class="mb-3">
				<label for="tag" class="form-label">Nom du tag</label>
				<input type="text" class="form-control" id="tag" aria-describedby="tagHelp" required/>
