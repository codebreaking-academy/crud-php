{% extends "base.twig" %}


{% block title %}Ajouter une catégorie
{% endblock %}


{% block main %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
	<h1 class="h2">Ajouter une catégorie</h1>
	<div class="btn-toolbar mb-2 mb-md-0">
		<a class="btn btn-sm btn-outline-secondary" href="read_categorie.php"><i class="bi bi-arrow-left"></i> Retour à la liste des catégories</a>
	</div>
</div>
{% if msg %}
	<div class="alert alert-success" role="alert">{{ msg }}</div>
{% else %}
<form action="create_categorie.php" method="post">
  <div class="mb-3">
    <label for="type" class="form-label">Nom de la catégorie</label>
    <input type="text" class="form-control" id="type" aria-describedby="categoryTypeHelp" required />
    <div id="categoryTypeHelp" class="form-text">Saisir un nom de catégorie.</div>
  </div>
  <button type="submit" class="btn btn-primary">Ajouter</button>
</form>
{% endif %}

{% endblock %}
