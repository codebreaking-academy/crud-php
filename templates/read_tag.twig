{% extends "base.twig" %}


{% block title %}Afficher tags
{% endblock %}


{% block main %}
	<div class="content read">
		<a href="create_tag.php" class="create-contact">Ajouter Tag
		</a>
		<table>
			<thead>
				<tr>
					<td>#</td>
					<td>Tag</td>
					<td></td>
				</tr>
			</thead>
			<tbody>
				{% for tag in tags %}

					<tr>
						<td>{{tag.id}}</td>
						<td>
							{{tag.tag}}</td>
						<td class="actions">
							<a href="update_tag.php?id={{tag.id}}" class="edit">
								<i class="fas fa-pen fa-xs"></i>
							</a>
							<a href="delete_tag.php?id={{tag.id}}" class="trash">
								<i class="fas fa-trash fa-xs"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="pagination">
			{% if page > 1 %}

				<a href="read_tag.php?page={{ page - 1 }}">
					<i class="fas fa-angle-double-left fa-sm"></i>
				</a>
			{% endif %}

			{% if page * records_per_page < num_tag %}
				<a href="read_tag.php?page={{ page + 1 }}">
					<i class="fas fa-angle-double-right fa-sm"></i>
				</a>
			{% endif %}

		</div>
	</div>
{% endblock %}
